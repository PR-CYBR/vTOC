{
  "name": "vTOC Developer Shell",
  "dockerComposeFile": [
    "docker-compose.devcontainer.yml"
  ],
  "service": "devcontainer",
  "workspaceFolder": "/workspace/vTOC",
  "runServices": ["database"],
  "updateRemoteUserUID": true,
  "postCreateCommand": "make setup-local",
  "postAttachCommand": "pnpm --dir frontend install && uv pip sync backend/requirements.txt",
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/workspace/vTOC/.venv/bin/python",
        "python.testing.pytestEnabled": true,
        "python.testing.pytestArgs": ["backend/tests"],
        "files.exclude": {
          "**/.pnpm-store": true,
          "**/.venv": true
        }
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint"
      ]
    }
  },
  "remoteEnv": {
    "PIP_REQUIRE_VIRTUALENV": "true"
  }
}
